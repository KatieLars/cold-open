<%=form_for user do |f|%>

  <sup>*</sup><%= f.label "Email: "%>
  <%=f.text_field :email%><br></br>

  <sup>*</sup><%=f.label "Username: "%>
  <%=f.text_field :username%><br></br>

  <%=f.label "Image(as link): "%>
  <%=f.text_field :image%><br></br>

  <%=f.label "Admin: "%>
  <%=f.check_box :admin, unchecked: false%><br></br>

  <%if !current_user.uid%>
    <sup>*</sup><%=f.label "New Password: "%>
    <%=f.password_field :password%><br></br>

    <sup>*</sup><%=f.label "Confirm New Password: "%>
    <%=f.password_field :password_confirmation%><br></br>
  <%end%>

  <%=f.submit%><br></br>

<%end%>
